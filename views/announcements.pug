extends layout

block content
  //h1(style="color:red")= title+"asdsad"
  //p Welcome to #{title}  
  .row
    .col-md-12.card
      .header
        h4.title 
        p.category 
      .content
        each val,index in data
          if index%2
            div(style="justify-content: space-around;display: flex;")
              div(style="width: 40%;overflow: auto;")
                .card(style="background-color: #e8e8e8;")
                  div(style="position: absolute;top:7;right:15")=val.date
                  .header
                    h4.title=val.title
                  .content!= val.text
              div.text-center(style="width: 20%;")
                i.fa.fa-circle(style="font-size: 25px;",class=val.color)
                div(style="background: #a7a7a7;width: 3px;height: 100%;margin: auto;")
              div(style="width: 40%;")
          else
            div(style="justify-content: space-around;display: flex;")
              div(style="width: 40%;")
              div.text-center(style="width: 20%;")
                i.fa.fa-circle(style="font-size: 25px;",class=val.color)
                div(style="background: #a7a7a7;width: 3px;height: 100%;margin: auto;")
              div(style="width: 40%;overflow: auto;")
                .card(style="background-color: #e8e8e8;")
                  div(style="position: absolute;top:7;right:15")=val.date
                  .header
                    h4.title=val.title
                  .content!= val.text
                         

