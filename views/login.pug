    script(type='text/javascript').    
      function login(){
        if(enforcedControl())
            return;
        _userName=$("[name='userName']").val();
        _password=$("[name='password']").val();
        var obj={"userName":_userName,"password":MD5(_password)}
        $.ajax({
            type:"POST", 
            url:"/ajax/login",
            data: obj,
            dataType: "json", 
            success:function(result){
                showNotification('top','right',result.color,result.message);
                if(result.status)
                    location.href="/dashboard"
            },
            error: function (jqXHR, exception) {
                console.log(jqXHR);
                console.log(exception);
            }
        });  
      }    

